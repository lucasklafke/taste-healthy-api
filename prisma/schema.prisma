generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  email      String       @unique
  password   String
  create_at  DateTime     @default(now())
  username   String
  Ingredient Ingredient[]
  Dish       Dish[]
}

model Dish {
  id                Int                 @id @default(autoincrement())
  description       String
  name              String
  preparation       String
  time_to_prepare   String
  author_id         Int
  Author            User                @relation(fields: [author_id], references: [id])
  ingredient_dosage Ingredient_dosage[]
}

model Ingredient_dosage {
  id            Int        @id @default(autoincrement())
  quantity      String
  description   String
  ingredient_id Int
  dish_id       Int
  dish          Dish       @relation(fields: [dish_id], references: [id])
  ingredient    Ingredient @relation(fields: [ingredient_id], references: [id])
}

model Ingredient {
  id                Int                 @id @default(autoincrement())
  group_id          Int
  carbohydrates     Float
  proteins          Float
  total_fat         Float
  calories          String
  description       String
  info_author_id    Int
  name              String
  group             Food_group          @relation(fields: [group_id], references: [id])
  author            User                @relation(fields: [info_author_id], references: [id])
  ingredient_dosage Ingredient_dosage[]
}

model Food_group {
  id          Int          @id @default(autoincrement())
  group       String
  description String
  ingredient  Ingredient[]
}
