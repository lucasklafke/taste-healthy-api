generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Dish {
  id          Int          @id @default(autoincrement())
  ingredients String
  ingredient  ingredient[]
}

model ingredient {
  id       Int @id @default(autoincrement())
  dish_id  Int
  group_id Int

  group Food_group @relation(fields: [group_id], references: [id])
  dish  Dish       @relation(fields: [dish_id], references: [id])
}

model Food_group {
  id          Int          @id @default(autoincrement())
  group       String
  description String
  ingredient  ingredient[]
}
